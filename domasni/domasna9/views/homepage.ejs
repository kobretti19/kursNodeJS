<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HOMEPAGE</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header><%- include('partials/header') %></header>
    <main>
      <div class="container">
        <% movies.forEach((movie, i) => { %>
        <div class="container">
          <div class="card">
            <div>
              <img
                src="<%= movie.img %>"
                alt="Avatar"
                style="width: 250px"
                height="350px"
              />
            </div>
            <div class="title-container">
              <h3><b><%= movie.name%></b></h3>
            </div>
            <div><p>Category:<%=movie.category %></p></div>
            <div><p>rating:<%=movie.rating %></p></div>
            <div><p>Triller:<%=movie.triller %></p></div>
            <div><p>Year:<%=movie.year %></p></div>
          </div>
        </div>
        <%}) %>
      </div>
    </main>
    <footer></footer>
  </body>
</html>
