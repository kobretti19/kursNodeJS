<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Studenska Web Stranica</title>
  </head>
  <body>
    <a href="http://localhost:10000/test">Go to test webpage</a>
    <h1>Ime: <%= ime %> <%= prezime %></h1>
    <ul>
      <% niza.forEach(grad => { %>
      <li><%= grad %></li>
      <% }); %>
    </ul>
    <table border="1" width="100%">
      <tr>
        <th>Ime</th>
        <th>Prezime</th>
        <th>Prosek</th>
      </tr>
      <% studenti.forEach(s => { %>
      <tr>
        <td><%= s.ime %></td>
        <td><%= s.prezime %></td>
        <td><%= s.prosek %></td>
      </tr>
      <% }) %>
    </table>
    <hr />
    <h2>Add New Student</h2>
    <form action="/" method="POST">
      <label for="ime">Ime:</label>
      <input type="text" name="ime" id="ime" required /> <br />
      <label for="prezime">Prezime</label>
      <input type="text" name="prezime" id="prezime" required /> <br />
      <label for="prosek">Prosek</label>
      <input type="number" name="prosek" id="prosek" /> <br />
      <input type="submit" value="Dodadi student" />
    </form>
  </body>
</html>
